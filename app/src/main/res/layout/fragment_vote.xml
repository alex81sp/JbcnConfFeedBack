<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteFragment">

    <TextView
        android:id="@+id/tvTalk"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero"
        android:layout_marginEnd="@dimen/eight"
        android:layout_marginStart="@dimen/eight"
        android:layout_marginTop="@dimen/twenty_four"
        android:text="@string/talk_title"
        android:textSize="@dimen/text_thirty"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero"
        android:layout_marginEnd="@dimen/eight"
        android:layout_marginStart="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="@string/speaker_name"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTalk" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixty_four"
        android:layout_marginEnd="@dimen/eight"
        android:layout_marginStart="@dimen/eight"
        android:layout_marginTop="@dimen/thirty_two"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpeaker"
        app:layout_constraintVertical_bias="0.26999998">

        <ImageButton
            android:id="@+id/imgBtnLove"
            android:layout_width="@dimen/smily_size"
            android:layout_height="@dimen/smily_size"
            android:layout_margin="@dimen/smily_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/love" />

        <ImageButton
            android:id="@+id/imgBtnSmile"
            android:layout_width="@dimen/smily_size"
            android:layout_height="@dimen/smily_size"
            android:layout_margin="@dimen/smily_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/smile" />

        <ImageButton
            android:id="@+id/imgBtnNormal"
            android:layout_width="@dimen/smily_size"
            android:layout_height="@dimen/smily_size"
            android:layout_margin="@dimen/smily_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/thirty_two"
        android:layout_marginEnd="@dimen/eight"
        android:layout_marginStart="@dimen/eight"
        android:layout_marginTop="@dimen/seventy_two"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSpeaker">

        <ImageButton
            android:id="@+id/imgBtnSleepy"
            android:layout_width="@dimen/smily_size"
            android:layout_height="@dimen/smily_size"
            android:layout_margin="@dimen/smily_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/sleepy" />

        <ImageButton
            android:id="@+id/imgBtnCry"
            android:layout_width="@dimen/smily_size"
            android:layout_height="@dimen/smily_size"
            android:layout_margin="@dimen/smily_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/cry" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>